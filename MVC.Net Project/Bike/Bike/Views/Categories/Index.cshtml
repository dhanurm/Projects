@model IEnumerable<Bike.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="color:white" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td >
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryName }, new { @style="color:white" }) |
            @Html.ActionLink("Details", "Details", new { id=item.CategoryName },new { @style = "color:white" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryName }, new { @style = "color:white" })
        </td>
    </tr>
}

</table>
